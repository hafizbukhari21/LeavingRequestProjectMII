@{
    ViewData["Title"] = "404";
    Layout = "_ErrorLayout";
}

    <div class="container-fluid h-custom mt-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-10 col-lg-7 col-xl-6">
                <img src="~/FlexStart/assets/img/error-image/404.png"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 ">
                <h1>404</h1>
                <h5>Page Not Found</h5>
                <p class="text-gray-500 mb-0">It looks like you found a glitch in the matrix...</p>
                <br />
                <div class="row begin-countdown">
                    <div class="col-md-12">
                        <p>Redirecting in... <span id="pageBeginCountdownText">5 </span> seconds</p>
                        <progress value="5" max="5" id="pageBeginCountdown"></progress>
                    </div>
                </div>
                <a asp-controller="Login" asp-action="Logout">&larr; Or Click This </a>
            </div>
        </div>
    </div>

