
@{
    ViewData["Title"] = "Employee";
    Layout = "_MainLayout";
}

<div class="container">
    <h1>Employee Data</h1>
    <div class="row pt-3">
        <div class="card col-12 pt-3 pb-3">
            <table class="table table-bordered table-hover" id="dataTbl">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- Insert Modal -->
<div class="modal fade" id="insertModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="was-validated" id="addForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Data</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body col-12">
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label for="group_name">Name <i class="text-danger">*</i></label>
                            <input required type="text" class="form-control" name="FirstName" id="FirstName" placeholder="Enter First Name">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="group_name">Gender <i class="text-danger">*</i></label>
                            <select required class="custom-select" name="Gender" id="Gender">
                                <option value="">== Choose Your Gender ==</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">Choose Male or Female</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label for="code_group">Email <i class="text-danger">*</i></label>
                            <input required type="email" class="form-control" name="Email" id="Email" placeholder="Enter Email">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="code_group">Password <i class="text-danger">*</i></label>
                            <input required type="text" class="form-control" name="Password" id="Password" placeholder="Enter Password">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label for="code_group">Phone Number <i class="text-danger">*</i></label>
                            <input required type="text" class="form-control" name="Phone" id="Phone" placeholder="Enter Phone">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="group_name">Role <i class="text-danger">*</i></label>
                            <select required class="custom-select" name="Gender" id="Gender">
                                <option value="">== Choose Your Role ==</option>
                                <option value="Male">12</option>
                                <option value="Female">22</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">Choose Male or Female</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label for="group_name">Manager <i class="text-danger">*</i></label>
                            <select required class="custom-select" name="Gender" id="Gender">
                                <option value="">== Choose Your manager ==</option>
                                <option value="">12</option>
                                <option value="">22</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">Choose Role</div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="group_name">Divisi <i class="text-danger">*</i></label>
                            <select required class="custom-select" name="Gender" id="Gender">
                                <option value="">== Choose Your Role ==</option>
                                <option value="">12</option>
                                <option value="">22</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">Choose Division</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="button" class="btn btn-warning" onclick="formReset()" value="Reset">
                    <button type="button" class="btn btn-primary" id="btnInput" onclick="Insert()">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section CSSnya {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css" />
}

